{
  "name": "cgsd-contract-signature-app",
  "version": "1.0.0",
  "private": true,
  "description": "CGSD Logistics contract signature application with secure links and MySQL storage",
  "scripts": {
    "dev": "next dev",
    "build": "npm run migrate:prod && next build",
    "build:force": "npm install --legacy-peer-deps && npm run migrate:prod && next build",
    "start": "next start",
    "lint": "next lint",
    
    "migrate": "npx tsx scripts/migrate.ts",
    "migrate:dev": "NODE_ENV=development npx tsx scripts/migrate.ts",
    "migrate:prod": "NODE_ENV=production npx tsx scripts/migrate.ts || echo 'Migration completed or skipped'",
    "postinstall": "npm run migrate:check",
    "migrate:check": "npx tsx scripts/migrate.ts --check || echo 'Migration check completed'",
    
    "db:migrate": "npx tsx scripts/migrate.ts",
    "db:migrate:dev": "NODE_ENV=development npx tsx scripts/migrate.ts",
    "db:migrate:prod": "NODE_ENV=production npx tsx scripts/migrate.ts",
    "db:status": "npx tsx scripts/db-status.ts",
    "db:cleanup": "npx tsx scripts/cleanup.ts",
    "db:cleanup:dry": "npx tsx scripts/cleanup.ts -- --dry-run",
    
    "railway:build": "npm run migrate:prod && npm run build",
    "railway:start": "npm start",
    "test:api": "curl http://localhost:3000/api/dashboard/stats || echo 'API test completed'",
    "health": "curl http://localhost:3000/ || echo 'Health check completed'"
  },
